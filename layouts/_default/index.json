{{ $searchData := slice }}

{{ range .Site.RegularPages }}
  {{ $searchData = $searchData | append (dict
    "title" .Title
    "url" .Permalink
    "content" (.Content | plainify | truncate 400)
    "summary" (.Summary | plainify)
    "date" (.Date | dateFormat "2006-01-02")
    "categories" .Params.categories
    "tags" .Params.tags
    "type" .Type
  ) }}
{{ end }}

{{ $searchData | jsonify }}